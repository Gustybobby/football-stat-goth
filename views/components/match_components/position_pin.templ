package match_components

import "strconv"

templ PositionPin(
	no int,
	firstname string,
	lastname string,
	position string,
	image string,
	light bool,
) {
	<div
		class={ "size-10 text-white font-bold rounded-full flex items-center justify-center text-center shadow-lg tooltip hover:scale-110 transition-transform " + pinVariant(light) }
	>
		{ strconv.Itoa(no) }
		<div class="tooltiptext -top-[6.5rem] bg-white text-black p-2 rounded-lg border border-primary shadow-lg w-56 h-24 flex items-center space-x-2 text-sm">
			<img src={ image } class="size-16"/>
			<div class="flex flex-col items-start">
				<a href="#" class="hover:underline text-left">
					<span class="text-left">{ firstname } { lastname } ({ strconv.Itoa(no) })</span>
				</a>
				<span>
					if position == "GK" {
						GoalKeeper
					} else if position == "DEF" {
						Defender
					} else if position == "MFD" {
						Midfielder
					} else if position == "FWD" {
						Forward
					}
				</span>
			</div>
		</div>
	</div>
}

func pinVariant(light bool) string {
	if light {
		return "bg-secondary-foreground"
	}
	return "bg-secondary-background"
}
